<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        app:cardCornerRadius="@dimen/padding_small"
        app:cardElevation="@dimen/padding_medium">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_medium"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/dp40"
                    android:layout_height="@dimen/dp40"
                    android:padding="@dimen/padding_medium"
                    android:id="@+id/ivMedia"/>
                <ImageView
                    android:layout_width="@dimen/margin_medium"
                    android:layout_height="@dimen/margin_medium"
                    app:srcCompat="@drawable/ic_play"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/PoppinsRegular"
                android:textSize="@dimen/text_16"
                android:textColor="@color/colorTextDark"/>
            <ImageView
                android:layout_width="@dimen/dp40"
                android:layout_height="@dimen/dp40"
                app:srcCompat="@drawable/ic_scissors_black"
                android:background="@drawable/circle_opacity"
                android:padding="@dimen/padding_medium"
                android:id="@+id/ivTrim"/>
            <ImageView
                android:layout_width="@dimen/dp40"
                android:layout_height="@dimen/dp40"
                app:srcCompat="@drawable/ic_check"
                android:layout_marginStart="@dimen/margin_small"
                android:background="@drawable/circle_opacity"
                android:padding="@dimen/padding_medium"
                android:id="@+id/ivDone"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>